<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="16dp">

        <FrameLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/item_shopping_points_campaign_amount_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_money_processing" />

            <TextView
                android:id="@+id/item_shopping_points_campaign_amount_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="1dp"
                android:textColor="#E3A503"
                android:textSize="11sp"
                tools:text="160" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/item_shopping_points_campaign_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分享萌萌屋，賺取160元購物金"
                android:textColor="@color/black_4a4a4a"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_shopping_points_campaign_active_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活動日期：2016/08/25~2016/09/01"
                android:textColor="@color/red_text"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/item_shopping_points_campaign_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分享萌萌屋商品到FB，即可得到購物金$160元，動作要快，錯過可惜！快點分享賺飽飽！"
                android:textColor="@color/black_4a4a4a"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_shopping_points_campaign_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="11sp"
            tools:text="進行中" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_divider_f2f2f2" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bottom_sheet_customer_service_title_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:text="@string/bottom_sheet_customer_service_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bottom_sheet_customer_service_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_sheet_customer_service_title_tv"
        android:layout_marginBottom="8dp" />

</RelativeLayout>

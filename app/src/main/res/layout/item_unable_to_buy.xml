<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/item_unable_to_buy_iv"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:scaleType="centerInside"
        tools:src="@mipmap/img_pre_load_rectangle" />

    <LinearLayout
        android:id="@+id/item_unable_to_buy_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/item_unable_to_buy_iv"
        android:layout_toRightOf="@id/item_unable_to_buy_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_unable_to_buy_product_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_4a4a4a"
            android:textSize="14sp"
            tools:text="超級可愛創意繽紛多彩超值可折疊手機支架" />

        <TextView
            android:id="@+id/item_unable_to_buy_spec_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_4a4a4a"
            android:textSize="11sp"
            tools:text="粉紅色" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_unable_to_buy_quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/black_4a4a4a"
                android:textSize="11sp"
                tools:text="選購數量：1" />

            <TextView
                android:id="@+id/item_unable_to_buy_stock_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text"
                android:textSize="11sp"
                tools:text="現貨數：0" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/item_unable_to_buy_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_unable_to_buy_content_ll"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/bg_divider_1f000000" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kosbrother.mongmongwoo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name="com.kosbrother.mongmongwoo.AnalyticsApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon9"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".fcm.MyFcmListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fcm.MyInstanceIDListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="45dedb112a0726be1b7bb4914d4d1a965117cae3" />

        <activity
            android:name=".launch.LaunchActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.kosbrother.mongmongwoo.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="com.kosbrother.mongmongwoo.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name="com.kosbrother.mongmongwoo.ShoppingCarActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name="com.kosbrother.mongmongwoo.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name="com.kosbrother.mongmongwoo.ServiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name="com.kosbrother.mongmongwoo.SelectDeliverStoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name="com.kosbrother.mongmongwoo.ProductActivity"
            android:label="商品資訊"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name="com.kosbrother.mongmongwoo.SettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name=".pastorders.PastOrderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name=".pastorders.PastOrderDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name=".pastorders.QueryPastOrdersActivity"
            android:label="訂單查詢"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name=".pastorders.QueryPastOrdersResultActivity"
            android:label="訂單查詢"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name=".mycollect.MyCollectActivity"
            android:label="@string/my_collect_activity_title"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme" />

        <activity
            android:name=".ZoomImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <!-- Used for Google Play Store Campaign Measurement-->
        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <service
            android:name="com.google.android.gms.analytics.CampaignTrackingService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>
